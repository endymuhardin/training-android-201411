<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.muhardin.endy.belajar.android.halo.InputNamaActivity">

    <TextView android:text="@string/input_nama" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblNama"
        android:layout_alignBaseline="@+id/txtNama"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtNama"
        android:layout_toEndOf="@+id/lblNama"
        android:hint="@string/input_nama_hint"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/lblNama"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_btnKirim"
        android:id="@+id/btnKirim"
        android:layout_below="@+id/txtNama"
        android:layout_alignStart="@+id/txtNama"
        android:onClick="btnKirimClicked"
        />

</RelativeLayout>
